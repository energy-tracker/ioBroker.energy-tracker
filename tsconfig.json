{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "noEmit": true,
        "allowJs": true,
        "checkJs": true,
        "noEmitOnError": true,
        "outDir": "./build/",
        "removeComments": false,
        "resolveJsonModule": true,
        "sourceMap": true,
        "inlineSourceMap": false
    },

    "include": ["src/**/*.ts"],
    "exclude": ["build/**", "node_modules/**", "widgets/**"]
}
