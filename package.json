{
  "name": "iobroker.energy-tracker",
  "version": "0.1.3",
  "description": "Adapter for sending meter readings with the Energy Tracker platform.",
  "author": "energy-tracker <support@best-ios-apps.de>",
  "contributors": [
    "energy-tracker <support@best-ios-apps.de>"
  ],
  "homepage": "https://github.com/energy-tracker/ioBroker.energy-tracker",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "energy tracker",
    "meter readings",
    "power consumption",
    "rest api"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/energy-tracker/iobroker.energy-tracker.git"
  },
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.2.3"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.4.0",
    "@iobroker/testing": "^5.0.4",
    "@tsconfig/node20": "^20.1.6",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.1",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.4",
    "@types/sinon-chai": "^3.2.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "mocha": "^11.7.0",
    "prettier": "^3.6.0",
    "proxyquire": "^2.1.3",
    "rimraf": "^6.0.1",
    "sinon": "^21.0.0",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "~5.0.4"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "dev": "dev-server watch src/main.ts",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.spec.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --ext .ts src/",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/energy-tracker/ioBroker.energy-tracker/issues"
  },
  "readmeFilename": "README.md"
}
